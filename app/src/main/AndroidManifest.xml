<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bnrc.bnrcbus">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".application.BnrcApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.HomeActivity" />
        <activity android:name=".view.activity.ARActivity" />
        <activity android:name=".view.activity.RouteActivity" />
        <activity android:name=".view.activity.BuslineListActivity" />
        <activity android:name=".view.activity.StationListActivity" />
        <activity android:name=".view.activity.BuslineMapActivity" />
        <activity android:name=".view.activity.AboutActivity" />
        <activity android:name=".view.activity.AlertSelectListActivity" />
        <activity android:name=".view.activity.BusCircleActivity" />
        <activity android:name=".view.activity.LoginActivity" />
        <activity android:name=".view.activity.RegisterActivity" />
        <activity android:name=".view.activity.SearchActivity" />
        <activity android:name=".view.activity.base.BaseActivity" />
        <activity android:name=".view.activity.SettingActivity" />
        <activity android:name=".view.activity.SubwayActivity"></activity>
    </application>

</manifest>